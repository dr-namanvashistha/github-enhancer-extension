{
  "manifest_version": 3,
  "name": "GitHub Enhancer",
  "version": "1.0.0",
  "description": "Enhances GitHub conversation pages with helpful tooltips",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/issues/*",
        "https://github.com/*/pull/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
